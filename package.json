{
  "name": "simulatore-conto-termico-30",
  "version": "1.0.0-pompa-calore-final",
  "description": "Simulatore Conto Termico 3.0 per GSE",
  "scripts": {
    "clean:formulas": "node scripts/remove-formulas.js",
    "prepare:html": "node scripts/prepare-html.js",
    "package": "powershell -ExecutionPolicy Bypass -File scripts/package.ps1",
    "build": "npm run clean:formulas && npm run prepare:html && npm run package",
